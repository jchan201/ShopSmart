<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShopOwnerSignupActivity"
    android:background="#2a47a7">

    <View
        android:id="@+id/titleView"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Payment Method"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/titleView"
        app:layout_constraintEnd_toEndOf="@+id/titleView"
        app:layout_constraintStart_toStartOf="@+id/titleView"
        app:layout_constraintTop_toTopOf="@+id/titleView" />

    <View
        android:id="@+id/bodyView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="@drawable/rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/textPaymentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shop Owner"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="@+id/bodyView"
        app:layout_constraintStart_toStartOf="@+id/bodyView"
        app:layout_constraintTop_toTopOf="@+id/bodyView"
        />

    <EditText
        android:id="@+id/edtTextCardName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/basic_rectangle"
        android:ems="10"
        android:hint="NAME ON CARD"
        android:inputType="textPersonName"
        android:padding="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:maxLength="16"
        app:layout_constraintEnd_toEndOf="@+id/bodyView"
        app:layout_constraintStart_toStartOf="@+id/bodyView"
        app:layout_constraintTop_toBottomOf="@+id/textPaymentTitle" />

    <EditText
        android:id="@+id/edtTextCardNum"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/basic_rectangle"
        android:ems="10"
        android:hint="CARD NUMBER"
        android:inputType="number"
        android:padding="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:maxLength="16"
        app:layout_constraintEnd_toEndOf="@+id/bodyView"
        app:layout_constraintStart_toStartOf="@+id/bodyView"
        app:layout_constraintTop_toBottomOf="@+id/edtTextCardName" />

    <TextView
        android:id="@+id/textViewExpiryDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expiry Date:"
        android:textSize="20dp"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="55dp"
        app:layout_constraintStart_toStartOf="@+id/bodyView"
        app:layout_constraintTop_toBottomOf="@+id/edtTextCardNum" />

    <Spinner
        android:id="@+id/edtTextExpiryDateMonth"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/basic_rectangle"
        android:ems="10"
        android:hint="MM"
        android:inputType="number"
        android:padding="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:entries="@array/months"
        app:layout_constraintEnd_toStartOf="@+id/edtTextExpiryDateYear"
        app:layout_constraintStart_toEndOf="@+id/textViewExpiryDate"
        app:layout_constraintTop_toBottomOf="@+id/edtTextCardNum" />

    <EditText
        android:id="@+id/edtTextExpiryDateYear"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/basic_rectangle"
        android:ems="10"
        android:hint="YYYY"
        android:inputType="number"
        android:padding="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:maxLength="4"
        app:layout_constraintEnd_toEndOf="@+id/bodyView"
        app:layout_constraintStart_toEndOf="@+id/edtTextExpiryDateMonth"
        app:layout_constraintTop_toBottomOf="@+id/edtTextCardNum" />

    <EditText
        android:id="@+id/edtTextCCV"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/basic_rectangle"
        android:ems="10"
        android:hint="CCV"
        android:inputType="number"
        android:maxLength="3"
        android:padding="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="@+id/bodyView"
        app:layout_constraintHorizontal_bias="0.522"
        app:layout_constraintStart_toStartOf="@+id/bodyView"
        app:layout_constraintTop_toBottomOf="@+id/edtTextExpiryDateMonth" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginBottom="16dp"
        android:padding="8dp"
        android:text="BILLING ADDRESS"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btnCancel"
        app:layout_constraintEnd_toEndOf="@+id/bodyView"
        app:layout_constraintStart_toStartOf="@+id/bodyView" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:padding="8dp"
        android:text="CANCEL"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/bodyView"
        app:layout_constraintStart_toStartOf="@+id/bodyView"
        />

</androidx.constraintlayout.widget.ConstraintLayout>