<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2a47a7"
    tools:context=".ShopOwnerSignupActivity">

    <View
        android:id="@+id/titleView"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Profile"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/titleView"
        app:layout_constraintEnd_toEndOf="@+id/titleView"
        app:layout_constraintStart_toStartOf="@+id/titleView"
        app:layout_constraintTop_toTopOf="@+id/titleView" />

    <View
        android:id="@+id/bodyView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="@drawable/rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleView" />

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shop Owner"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="@+id/bodyView"
        app:layout_constraintStart_toStartOf="@+id/bodyView"
        app:layout_constraintTop_toTopOf="@+id/bodyView" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:padding="8dp"
        android:text="SAVE"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btnCancel"
        app:layout_constraintEnd_toEndOf="@+id/bodyView"
        app:layout_constraintStart_toStartOf="@+id/bodyView" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:padding="8dp"
        android:text="CANCEL"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/bodyView"
        app:layout_constraintStart_toStartOf="@+id/bodyView"
        />

    <TextView
        android:id="@+id/textNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="37dp"
        android:text="Name: "
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="@+id/bodyView"
        app:layout_constraintTop_toBottomOf="@+id/textTitle" />

    <EditText
        android:id="@+id/textFName"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="27dp"
        android:hint="First Name"
        android:inputType="textPersonName"
        android:text="UNKNOWN"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/textNameTitle"
        app:layout_constraintTop_toBottomOf="@+id/textTitle"/>

    <EditText
        android:id="@+id/textMName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="16dp"
        android:hint="Middle Initial"
        android:inputType="textPersonName"
        android:text="UNKNOWN"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/textNameTitle"
        app:layout_constraintTop_toBottomOf="@+id/textFName"/>

    <EditText
        android:id="@+id/textLName"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="16dp"
        android:hint="Last Name"
        android:inputType="textPersonName"
        android:text="UNKNOWN"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/textNameTitle"
        app:layout_constraintTop_toBottomOf="@+id/textMName"/>

    <TextView
        android:id="@+id/textDOBTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="33dp"
        android:text="Date of Birth: "
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="@+id/bodyView"
        app:layout_constraintTop_toBottomOf="@+id/textLName" />

    <TextView
        android:id="@+id/textPhoneTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="42dp"
        android:text="Phone No.: "
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="@+id/bodyView"
        app:layout_constraintTop_toBottomOf="@+id/textDOBTitle" />

    <EditText
        android:id="@+id/textPhone"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="16dp"
        android:hint="Phone number"
        android:inputType="phone"
        android:maxLength="10"
        android:text="UNKNOWN"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/textPhoneTitle"
        app:layout_constraintTop_toBottomOf="@+id/datePickerButton" />

    <Button
        android:id="@+id/datePickerButton"
        style="?android:spinnerStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="16dp"
        android:onClick="openDatePicker"
        android:text="JAN 01 2020"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/textDOBTitle"
        app:layout_constraintTop_toBottomOf="@+id/textLName"
        />

</androidx.constraintlayout.widget.ConstraintLayout>