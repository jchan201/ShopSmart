<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShopOwnerSignupActivity">

    <TextView
        android:id="@+id/textRegister3"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentTop="true"
        android:background="#76b5c5"
        android:fontFamily="sans-serif-light"
        android:paddingVertical="25dp"
        android:text="Update Profile"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="40sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:padding="8dp"
        android:text="SAVE"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btnCancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:padding="8dp"
        android:text="CANCEL"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="37dp"
        android:text="Name: "
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textRegister3" />

    <EditText
        android:id="@+id/textFName"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="27dp"
        android:hint="First Name"
        android:inputType="textPersonName"
        android:text="UNKNOWN"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/textNameTitle"
        app:layout_constraintTop_toBottomOf="@+id/textRegister3" />

    <EditText
        android:id="@+id/textMName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="16dp"
        android:hint="Middle Initial"
        android:inputType="textPersonName"
        android:text="UNKNOWN"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/textNameTitle"
        app:layout_constraintTop_toBottomOf="@+id/textFName" />

    <EditText
        android:id="@+id/textLName"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="16dp"
        android:hint="Last Name"
        android:inputType="textPersonName"
        android:text="UNKNOWN"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/textNameTitle"
        app:layout_constraintTop_toBottomOf="@+id/textMName" />

    <TextView
        android:id="@+id/textDOBTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="33dp"
        android:text="Date of Birth: "
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textLName" />

    <TextView
        android:id="@+id/textPhoneTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="42dp"
        android:text="Phone No.: "
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textDOBTitle" />

    <EditText
        android:id="@+id/textPhone"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="16dp"
        android:hint="Phone number"
        android:inputType="phone"
        android:maxLength="10"
        android:text="UNKNOWN"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/textPhoneTitle"
        app:layout_constraintTop_toBottomOf="@+id/datePickerButton" />

    <Button
        android:id="@+id/datePickerButton"
        style="?android:spinnerStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="16dp"
        android:onClick="openDatePicker"
        android:text="JAN 01 2020"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/textDOBTitle"
        app:layout_constraintTop_toBottomOf="@+id/textLName" />

</androidx.constraintlayout.widget.ConstraintLayout>