    <CheckBox
        android:id="@+id/chkSunday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sunday"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.057"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chkSaturday" />

    <EditText
        android:id="@+id/edtTxtSunday1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="00:00"
        android:inputType="text"
        android:maxLength="5"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/chkSunday"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="@+id/chkSunday"
        app:layout_constraintTop_toBottomOf="@+id/chkSaturday" />

    <EditText
        android:id="@+id/edtTxtSunday2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="23:59"
        android:inputType="text"
        android:maxLength="5"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/chkSunday"
        app:layout_constraintStart_toEndOf="@+id/edtTxtSunday1"
        app:layout_constraintTop_toBottomOf="@+id/chkSaturday" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:padding="8dp"
        android:text="FINISH"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btnCancel"
        app:layout_constraintEnd_toEndOf="@+id/bodyView"
        app:layout_constraintStart_toStartOf="@+id/bodyView" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:padding="8dp"
        android:text="CANCEL"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/bodyView"
        app:layout_constraintStart_toStartOf="@+id/bodyView" />

</androidx.constraintlayout.widget.ConstraintLayout>