<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".SignupActivity">

    <!--
        Need to replace the below Buttons with ImageButtons
     -->

    <TextView
        android:id="@+id/txtPrompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="15dp"
        android:text="Sign up as a..."
        android:textAlignment="center"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnCustomer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtPrompt"
        android:layout_marginBottom="15dp"
        android:text="Customer"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btnShopOwner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnCustomer"
        android:layout_marginBottom="15dp"
        android:text="Shop Owner"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnShopOwner"
        android:text=""
        android:textColor="@color/red"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Back"
        android:textSize="20sp" />

</RelativeLayout>