<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerRegistrationActivity2"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0">
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="412dp"
            android:layout_height="170dp"
            android:layout_marginTop="-3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/shopsmart" />
        <TextView
            android:id="@+id/userName"
            android:layout_width="266dp"
            android:layout_height="19dp"
            android:text="Username"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.944"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.109" />
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="71dp"
            android:layout_height="66dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userName"
            app:srcCompat="@drawable/avatar" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        android:layout_weight="1"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:context=".CustomerDashboardActivity">

        <ImageView
            android:id="@+id/imageViewShop"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="16dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/avatar" />

        <TextView
            android:id="@+id/shopNameView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="115dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/rectangle3"
            android:text="Shop Name"
            android:textSize="17dp"
            android:visibility="invisible"
            app:layout_constraintStart_toEndOf="@+id/imageViewShop"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/shopPhoneView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="115dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rectangle3"
            android:text="Shop Phone"
            android:textSize="17dp"
            android:visibility="invisible"
            app:layout_constraintStart_toEndOf="@+id/imageViewShop"
            app:layout_constraintTop_toBottomOf="@+id/shopNameView" />

        <TextView
            android:id="@+id/shopEmailView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="115dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rectangle3"
            android:text="Shop Email"
            android:textSize="17dp"
            android:visibility="invisible"
            app:layout_constraintStart_toEndOf="@+id/imageViewShop"
            app:layout_constraintTop_toBottomOf="@+id/shopPhoneView" />

        <TextView
            android:id="@+id/shopAddressView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="115dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rectangle3"
            android:text="Shop Address"
            android:textSize="17dp"
            android:visibility="invisible"
            app:layout_constraintStart_toEndOf="@+id/imageViewShop"
            app:layout_constraintTop_toBottomOf="@+id/shopEmailView" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>