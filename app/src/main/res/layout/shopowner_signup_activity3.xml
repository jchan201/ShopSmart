<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShopOwnerSignupActivity"
    android:background="#2a47a7">

    <View
        android:id="@+id/titleView"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/titleView"
        app:layout_constraintEnd_toEndOf="@+id/titleView"
        app:layout_constraintStart_toStartOf="@+id/titleView"
        app:layout_constraintTop_toTopOf="@+id/titleView" />

    <View
        android:id="@+id/bodyView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="@drawable/rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/textPaymentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Information"
        android:textSize="30dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/bodyView"
        app:layout_constraintStart_toStartOf="@+id/bodyView"
        app:layout_constraintTop_toTopOf="@+id/bodyView"
        />

    <EditText
        android:id="@+id/edtTextCardNum"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/basic_rectangle"
        android:ems="10"
        android:hint="CARD NUMBER"
        android:inputType="number"
        android:padding="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:maxLength="16"
        app:layout_constraintEnd_toEndOf="@+id/bodyView"
        app:layout_constraintStart_toStartOf="@+id/bodyView"
        app:layout_constraintTop_toBottomOf="@+id/textPaymentTitle" />

    <TextView
        android:id="@+id/textViewExpiryDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expiry Date:"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="55dp"
        app:layout_constraintStart_toStartOf="@+id/bodyView"
        app:layout_constraintTop_toBottomOf="@+id/edtTextCardNum" />

    <Spinner
        android:id="@+id/edtTextExpiryDateMonth"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/basic_rectangle"
        android:ems="10"
        android:hint="MM"
        android:inputType="number"
        android:padding="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:entries="@array/months"
        app:layout_constraintEnd_toStartOf="@+id/edtTextExpiryDateYear"
        app:layout_constraintStart_toEndOf="@+id/textViewExpiryDate"
        app:layout_constraintTop_toBottomOf="@+id/edtTextCardNum" />

    <EditText
        android:id="@+id/edtTextExpiryDateYear"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/basic_rectangle"
        android:ems="10"
        android:hint="YYYY"
        android:inputType="number"
        android:padding="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:maxLength="4"
        app:layout_constraintEnd_toEndOf="@+id/bodyView"
        app:layout_constraintStart_toEndOf="@+id/edtTextExpiryDateMonth"
        app:layout_constraintTop_toBottomOf="@+id/edtTextCardNum" />

    <EditText
        android:id="@+id/edtTextCCV"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/basic_rectangle"
        android:ems="10"
        android:hint="CCV"
        android:inputType="number"
        android:padding="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:maxLength="3"
        app:layout_constraintEnd_toEndOf="@+id/bodyView"
        app:layout_constraintStart_toStartOf="@+id/bodyView"
        app:layout_constraintTop_toBottomOf="@+id/edtTextExpiryDateMonth" />

    <EditText
        android:id="@+id/edtTextBillCity"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/basic_rectangle"
        android:ems="10"
        android:hint="City"
        android:inputType="textPersonName"
        android:padding="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:maxLength="50"
        app:layout_constraintStart_toStartOf="@+id/bodyView"
        app:layout_constraintTop_toBottomOf="@+id/edtTextCCV" />

    <EditText
        android:id="@+id/edtTextBillPostalCode"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/basic_rectangle"
        android:ems="10"
        android:hint="A1A 1A1"
        android:inputType="textPersonName"
        android:padding="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:maxLength="7"
        app:layout_constraintEnd_toEndOf="@+id/bodyView"
        app:layout_constraintTop_toBottomOf="@+id/edtTextCCV" />

    <Spinner
        android:id="@+id/spinner_province"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/basic_rectangle"
        android:padding="8dp"
        android:textSize="20sp"
        android:entries="@array/provinces"
        app:layout_constraintEnd_toStartOf="@+id/edtTextBillPostalCode"
        app:layout_constraintStart_toEndOf="@+id/edtTextBillCity"
        app:layout_constraintTop_toBottomOf="@+id/edtTextCCV" />

    <EditText
        android:id="@+id/edtTextBillAdd1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/basic_rectangle"
        android:ems="10"
        android:hint="Billing Address 1"
        android:inputType="textPersonName"
        android:padding="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/bodyView"
        app:layout_constraintStart_toStartOf="@+id/bodyView"
        app:layout_constraintTop_toBottomOf="@+id/spinner_province" />

    <EditText
        android:id="@+id/edtTextBillAdd2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/basic_rectangle"
        android:ems="10"
        android:hint="Billing Address 2"
        android:inputType="textPersonName"
        android:padding="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/bodyView"
        app:layout_constraintStart_toStartOf="@+id/bodyView"
        app:layout_constraintTop_toBottomOf="@+id/edtTextBillAdd1" />

    <Button
        android:id="@+id/buttonNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FF0000"
        android:text="Next"
        android:layout_marginBottom="32dp"
        android:layout_marginRight="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/bodyView" />

    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FF0000"
        android:text="Cancel"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/bodyView"
        />

</androidx.constraintlayout.widget.ConstraintLayout>