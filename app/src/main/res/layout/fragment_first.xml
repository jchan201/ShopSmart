        <TextView
            android:id="@+id/queryShopAddress1"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="Shop Address Line 1"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/queryShopAddress2"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:text="Shop Address Line 2"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="@+id/queryShopAddress1"
            app:layout_constraintTop_toBottomOf="@id/queryShopAddress1" />

        <TextView
            android:id="@+id/queryShopPCode"
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:text="Shop PCode"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/queryShopAddress1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
